[Unit]
Description=Mira Studio - Memory and Intelligence Layer
After=network.target

[Service]
Type=simple
User=peter
WorkingDirectory=/home/peter/Mira
ExecStart=/home/peter/Mira/target/release/mira web
Restart=on-failure
RestartSec=5

# Environment
EnvironmentFile=/home/peter/Mira/.env

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mira

[Install]
WantedBy=multi-user.target
