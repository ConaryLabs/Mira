{
  "description": "Mira bidirectional communication hooks for proactive context injection and event handling",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook session-start",
            "timeout": 10,
            "statusMessage": "Mira: Loading session context..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook user-prompt",
            "timeout": 8,
            "statusMessage": "Mira: Searching memories..."
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook permission",
            "timeout": 3,
            "statusMessage": "Mira: Checking permissions..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Grep|Glob|Read",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook pre-tool",
            "timeout": 3,
            "statusMessage": "Mira: Checking relevant context..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook post-tool",
            "timeout": 5,
            "statusMessage": "Mira: Tracking changes..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook pre-compact",
            "timeout": 30,
            "async": true,
            "statusMessage": "Mira: Preserving context..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook stop",
            "timeout": 8,
            "statusMessage": "Mira: Saving session..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook session-end",
            "timeout": 15,
            "statusMessage": "Mira: Closing session..."
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook subagent-start",
            "timeout": 3,
            "statusMessage": "Mira: Injecting agent context..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook subagent-stop",
            "timeout": 3,
            "async": true,
            "statusMessage": "Mira: Capturing discoveries..."
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook post-tool-failure",
            "timeout": 5,
            "async": true,
            "statusMessage": "Mira: Analyzing failure..."
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook task-completed",
            "timeout": 5,
            "statusMessage": "Mira: Processing task completion..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/bin/mira-wrapper hook teammate-idle",
            "timeout": 5,
            "statusMessage": "Mira: Checking teammate status..."
          }
        ]
      }
    ]
  }
}
